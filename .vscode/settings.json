// File: .vscode/settings.json
// ----------------------------------------------------------
// Description:
// Configures VS Code for the FastAPI + PostgreSQL project.
// Ensures consistent development experience under Windows 11
// using WSL2 and Docker containers. Supports Python linting,
// Black formatting, pytest testing, and Pylance path resolution.
// ----------------------------------------------------------
{
  // --------------------------------------------------------
  // Python Environment & Linting Configuration
  // --------------------------------------------------------
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python", // WSL2-compatible virtual env
  "python.analysis.extraPaths": [
    "./app" // Ensures imports like 'from app.auth.security' are recognized
  ],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "editor.formatOnSave": true,
  "python.formatting.provider": "black",
  // --------------------------------------------------------
  // Testing Setup (pytest)
  // --------------------------------------------------------
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  // --------------------------------------------------------
  // File Exclusions (Hide Cache & Build Artifacts)
  // --------------------------------------------------------
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.vscode": false
  },
  // --------------------------------------------------------
  // Editor & Terminal Behavior
  // --------------------------------------------------------
  "files.autoSave": "onFocusChange",
  "terminal.integrated.encoding": "utf8",
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}" // Makes 'app' imports work in VS Code Terminal
  },
  // --------------------------------------------------------
  // Environment Management
  // --------------------------------------------------------
  "python.envs.defaultEnvManager": "ms-python.python:system",
  "python.envs.pythonProjects": [],
  // --------------------------------------------------------
  // Docker Integration (optional)
  // --------------------------------------------------------
  "docker.defaultContext": "default",
  "docker.explorerRefreshInterval": 2000,
  "python-envs.pythonProjects": []
}